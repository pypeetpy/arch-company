######################## System Key #####################################

###Volume keys###
bindsym $mod+plus		exec $inc
bindsym $mod+minus		exec $dec
bindsym $mod+Shitf+m		exec $mute
bindsym XF86AudioLowerVolume	exec $dec
bindsym XF86AudioRaiseVolume	exec $inc
bindsym XF86AudioMute		exec $mute

bindsym $mod+End		exec reboot
bindsym $mod+Shift+End		exec poweroff

bindsym $mod+Shift+Escape	exec i3-msg exit
bindsym $mod+Escape		kill

bindsym $mod+Home		exec --no-startup-id i3lock-fancy-dualmonitor -g
bindsym $mod+Shift+Home		exec systemctl suspend-then-hibernate

bindsym $mod+F8			exec xbacklight -dec 10
bindsym $mod+Shift+F8		exec xbacklight -inc 10
bindsym XF86MonBrightnessDown 	exec xbacklight -dec 10
bindsym XF86MonBrightnessUp	exec xbacklight -inc 10

###Spotify Control key ###
bindsym XF86AudioPrev		exec $prev
bindsym XF86AudioNext		exec $next
bindsym XF86AudioPlay		exec $play

bindsym Print			exec maim -s /home/peet/Pictures/Screenshot/$(date +%F)-$(date +%T).png
bindsym Shift+Print		exec maim /home/peet/Pictures/Screenshot/F-$(date +%F)-$(date +%T).png
######################## Focus Key #####################################
bindsym $mod+$mod1+w		[class="qutebrowser"] focus
bindsym $mod+$mod1+m		[class="mpv"] focus
bindsym $mod+$mod1+t		[class="Telegram"] focus
bindsym $mod+$mod1+l		[class="Chromium" title="LINE"] focus
bindsym $mod+$mod1+u		[class="URxvt"] focus
bindsym $mod+$mod1+c		[class="Chromium" instance="web.wechat.com"] focus

